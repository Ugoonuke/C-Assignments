/* ------------------------------
 Program: output.c
 Author: Ugo-Michael Onuke
 Purpose: Write a program that converts degrees to radians.
 ------------------------------*/
#include <stdio.h>
#include <stdlib.h>

int main()
{
    float radians, degrees;

    for(degrees = 1; degrees <= 360; degrees++){
    radians = degrees * (3.14 / 180);
    printf("Degrees: %.1f\nRadians: %.2f\n\n", degrees, radians);
    }

    return 0;
}
