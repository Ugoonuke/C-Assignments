 ------------------------------*/
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int base;
    int height;
    float area;

    printf("Enter base, height:\n\n ");
    scanf("%d%d", &base , &height);
    area = (0.50)*base*height;
    printf("Area = %.2f\n", area);
    return 0;
}
