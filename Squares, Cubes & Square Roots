/* ------------------------------
 Program: output.c
 Author: Ugo-Michael Onuke
 Purpose: Write a program that calculates the squares cubes and square roots of the numbers from 0 to 10.
 ------------------------------*/
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
    system("color F9");
    printf("Number\tSquare\tCube\tRoot\n");
    for(int i=0; i<11; i++)
    {
        printf("%d\t%.0f\t%.0f\t%.2f\n", i, (pow(i,2)), (pow(i,3)), sqrt(i));
    }
    return 0;
}
