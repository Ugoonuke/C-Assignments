/* ------------------------------
 Program: output.c
 Author: Ugo-Michael Onuke
 Purpose: Write a program that converts meters into cm, mm and imperial feet.
 ------------------------------*/
#include <stdio.h>
#include <stdlib.h>

int main()
{
    float integer1;
    float cm;
    float mm;
    float feet;

    printf("Enter Your Measurement In Metres Below...\n\n");
    scanf("%f", &integer1);

    cm = integer1 * 100;
    mm = integer1 * 1000;
    feet = integer1 * 3.25;

    printf("%f Metres = %fcm = %fmm = %ffeet", integer1, cm, mm, feet);
    return 0;
}
