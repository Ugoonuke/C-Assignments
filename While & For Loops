/* ------------------------------
 Program: output.c
 Author: Ugo-Michael Onuke
 Purpose: Write a program that uses while and for loops.
 ------------------------------*/
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int integer1 = 1;

    while(integer1 <= 10){
    printf("%d - I love to while loop.\n", integer1);
    integer1 = integer1++;
    }

    printf("\n");

    for(integer1 = 1; integer1 <= 10; integer1++){
    printf("%d - For loops are easier to use.\n", integer1);
    }
    return 0;
}
